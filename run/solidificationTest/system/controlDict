FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application         solidificationFoam;
startFrom           latestTime;
startTime           0;
stopAt              endTime;
endTime             10e-3; //5e-3
deltaT              1e-6;
writeControl        adjustableRunTime; // use timeStep for debug
writeInterval       2e-5; //2e-6; // use 1 for debug
purgeWrite          0;
writeFormat         binary;
writePrecision      6;
writeCompression    off;
timeFormat          general; //fixed;
timePrecision       7;
adjustTimeStep      yes;
maxCo               0.5;
maxPhaseCo          0.02; // 0.02
minDeltaT           1e-12;
//maxDeltaT           1e-7;
runTimeModifiable   yes;

DebugSwitches
{
    multicomponentAlloy 0;
}

